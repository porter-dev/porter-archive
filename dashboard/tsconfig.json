{
  "compilerOptions": {
    "lib": ["ESNext"],
    "baseUrl": "src",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build", "jest.config.js"]
}
